@model TezzaBizSolution.Lib.Models.Location

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h4>Edit Location</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="CollectionId" class="control-label">Collection</label>
                    <select asp-for="CollectionId" class="form-control" asp-items="ViewBag.CollectionId"></select>
                    <span asp-validation-for="CollectionId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input required="required" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input required="required" asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Latitude" class="control-label"></label>
                    <input required="required" id="latitude" readonly="readonly" asp-for="Latitude" class="form-control" />
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Longitude" class="control-label"></label>
                    <input required="required" id="longitude" readonly="readonly" asp-for="Longitude" class="form-control" />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn btn-sm btn-outline-info" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
        <div class="col-md-8">
            <partial name="_MapContainer" />
        </div>
    </div>
</div>