@model TezzaBizSolution.Lib.Models.Location

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h4>Create Location</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CollectionId" class="control-label">Collection</label>
                    <select asp-for="CollectionId" class="form-control" asp-items="ViewBag.CollectionId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" required="required" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input required="required" asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Latitude" class="control-label"></label>
                    <input id="latitude" readonly="readonly" asp-for="Latitude" required="required" class="form-control" />
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Longitude" class="control-label"></label>
                    <input id="longitude" readonly="readonly" asp-for="Longitude" required class="form-control" />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn-outline-info btn" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
        <div class="col-md-8">
           <partial name="_MapContainer"/>
        </div>
    </div>

</div>