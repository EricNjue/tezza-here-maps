@model TezzaBizSolution.Web.ViewModels.LocationsAggregateViewModel
@{
    ViewData["Title"] = "Index";

}
<div class="container">
    <div class="row">
        <div class="col-md-5">
            <table class="table table-striped table-hover table-sm">
                <thead>
                    <tr>

                        <th>Name</th>
                        <th>&nbsp;</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @*List the collections here*@
                    @{
                        foreach (var collection in Model.Collections)
                        {
                            <tr>
                                <td>@collection.Name</td>
                                <td>
                                    <input type="button" id="btnShowRoute" onclick="showRoute(@collection.Id)" class="btn btn-sm btn-outline-primary" value="Show Route" />
                                </td>
                                <td>
                                    <input type="button" id="btnShowPointsOnMap" onclick="showPointsOnMap(@collection.Id)" class="btn btn-sm btn-outline-success" value="Show Points On Map" />
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-7">
            <partial name="_MapContainer" />
        </div>
    </div>
</div>




